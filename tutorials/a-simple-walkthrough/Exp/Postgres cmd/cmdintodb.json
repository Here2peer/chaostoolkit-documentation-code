{
	"version": "0.0.1",
	"title": "What is the impact of terminating a pod?",
	"description": "If the pod is terminated, we should spin up a new pod.",
	"tags": ["kubernetes"],

	"secrets": {
		"k8s": {
			"kubernetes": {
				"KUBERNETES_HOST": "192.168.1.3:80",
				"KUBERNETES_CERT_FILE": {
					"type": "env",
					"key": "kubecert"
				},
				"KUBERNETES_KEY_FILE": {
					"type": "env",
					"key": "kubekey"
				}
			}
		}
	},
	"steady-state-hypothesis": {
		"title": "Scale back all pods.",
		"probes": [{
			"type": "probe",
			"tolerance": true,
			"name": "deployment-fully-available",
			"provider": {
				"type": "python",
				"module": "chaosk8s.deployment.probes",
				"func": "deployment_fully_available",
				"arguments": {
				  "name": "postgres"
				}
		  }
		}]
	},
	"method": [
		{
			"type": "action",
			"name": "scale-deployment",
			"provider": {
				"type": "python",
				"module": "chaosk8s.deployment.actions",
				"func": "scale_deployment",
				"arguments": {
					"name": "book",
					"ns": "default",
					"replicas": 0
				}
			}
		},
		{
			"type": "action",
			"name": "scale-deployment",
			"provider": {
				"type": "python",
				"module": "chaosk8s.deployment.actions",
				"func": "scale_deployment",
				"arguments": {
					"name": "postgres",
					"ns": "default",
					"replicas": 0
				}
			},
		    "pauses": {
                "after": 10
            }
		},
		{
			"type": "action",
			"name": "scale-deployment",
			"provider": {
				"type": "python",
				"module": "chaosk8s.deployment.actions",
				"func": "scale_deployment",
				"arguments": {
					"name": "postgres",
					"ns": "default",
					"replicas": 1
				}
			}
		},
		{
			"type": "probe",
			"name": "deployment-fully-available",
			"provider": {
				"type": "python",
				"module": "chaosk8s.probes",
				"func": "deployment_fully_available",
				"arguments": {
				  "name": "postgres"
				}
			},
		    "pauses": {
                "after": 15
            }
		},
		{
			"type": "action",
			"name": "create-database-bookshelf",
			"provider": {
				"type": "python",
				"module": "chaosk8s.pod.actions",
				"func": "exec_in_pods",
				"arguments": {
					"cmd": "createdb -U admin bookshelf",
					"label_selector": "app=postgres",
					"ns": "default",
					"container_name": "postgres"
				}
			},
		    "pauses": {
                "after": 2
            }
		},
		{
			"type": "action",
			"name": "fill-database-bookshelf",
			"provider": {
				"type": "python",
				"module": "chaosk8s.pod.actions",
				"func": "exec_in_pods",
				"arguments": {
					"cmd": "echo 'CREATE SCHEMA IF NOT EXISTS shelf2 AUTHORIZATION admin;' >> script.sql && echo 'CREATE TABLE shelf2.book (id bigint PRIMARY KEY, title text, publisher text);' >> script.sql && psql -f script.sql bookshelf -U admin && ls",
					"label_selector": "app=postgres",
					"ns": "default",
					"container_name": "postgres"
				}
			},
		    "pauses": {
                "after": 2
            }
		},
		{
			"type": "action",
			"name": "scale-deployment",
			"provider": {
				"type": "python",
				"module": "chaosk8s.deployment.actions",
				"func": "scale_deployment",
				"arguments": {
					"name": "book",
					"ns": "default",
					"replicas": 1
				}
			}
		},
		{
			"name": "deployment-fully-available",
			"type": "probe",
			"tolerance": true,
			"secrets": ["k8s"],
			"provider": {
				"type": "python",
				"module": "chaosk8s.probes",
				"func": "deployment_fully_available",
				"arguments": {
					"name": "postgres"
				}
			}
		}
]}

